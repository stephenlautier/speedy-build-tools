{
	"compilerOptions": {
		"module": "umd",
		"target": "es5",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2015"
		],
		"inlineSources": true,
		"inlineSourceMap": true,
		"removeComments": true,
		"allowUnreachableCode": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"src/**/*.ts"
	]
}