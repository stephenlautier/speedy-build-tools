{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"es2015"
		],
		"types": [
			"node",
			"jasmine"
		],
		"inlineSources": true,
		"inlineSourceMap": true,
		"removeComments": true,
		"allowUnreachableCode": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"declaration": true,
		"noImplicitReturns": true,
		"noImplicitAny": true,
		"noFallthroughCasesInSwitch": true
	},
	"exclude": [
		"node_modules"
	],
	"include": [
		"**/*.ts"
	]
}